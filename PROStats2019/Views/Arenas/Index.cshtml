@model IEnumerable<HockeyStats2019.Models.Arena>

@{
    ViewData["Title"] = "Index";
}

<h1>Arenor</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ArenaName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArenaAddress)
            </th>                   
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.OrderBy(x=>x.ArenaName) ) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ArenaName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArenaAddress)
            </td>           
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
